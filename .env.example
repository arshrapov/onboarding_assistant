# Onboarding Assistant - Environment Variables Template
# Copy this file to .env and fill in your actual values

# =============================================================================
# Required Configuration
# =============================================================================

# Gemini API Key (required for RAG/LLM features)
# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here


# =============================================================================
# Optional Configuration - Data Directories
# =============================================================================

# Base data directory (default: /app/data or ./data)
# DATA_DIR=./data

# Directory for cloned repositories (default: /app/data/repos)
# REPOS_DIR=./data/repos

# Directory for ChromaDB vector indexes (default: /app/data/indexes)
# INDEXES_DIR=./data/indexes

# Directory for metadata cache (default: /app/data/cache)
# CACHE_DIR=./data/cache


# =============================================================================
# Optional Configuration - Server Settings
# =============================================================================

# Server host (default: 0.0.0.0)
# SERVER_HOST=0.0.0.0

# Server port (default: 7860)
# SERVER_PORT=7860


# =============================================================================
# Optional Configuration - File Processing
# =============================================================================

# Maximum file size in MB (default: 5)
# MAX_FILE_SIZE_MB=5

# Supported file extensions (comma-separated)
# SUPPORTED_EXTENSIONS=.py,.js,.ts,.tsx,.jsx,.java,.go,.rs,.cpp,.c,.h,.hpp,.cs,.rb,.php,.md,.txt,.json,.yaml,.yml


# =============================================================================
# Optional Configuration - RAG Settings
# =============================================================================

# Chunk size for text splitting (default: 1000)
# CHUNK_SIZE=1000

# Chunk overlap (default: 200)
# CHUNK_OVERLAP=200

# Top K results for similarity search (default: 5)
# TOP_K_RESULTS=5


# =============================================================================
# Optional Configuration - LLM Settings
# =============================================================================

# Gemini model name (default: gemini-1.5-flash)
# GEMINI_MODEL=gemini-1.5-flash

# Embedding model name (default: models/embedding-001)
# EMBEDDING_MODEL=models/embedding-001

# Maximum tokens for LLM responses (default: 8192)
# MAX_TOKENS=8192

# Temperature for LLM responses (default: 0.7)
# TEMPERATURE=0.7